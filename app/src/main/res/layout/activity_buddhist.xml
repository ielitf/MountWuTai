<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/main_back"
    tools:context="com.bupt.mountwutai.ui.activity.main.BuddhistActivity">

    <include layout="@layout/main_top" />

    <RelativeLayout
        android:id="@+id/buddhist_active"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px150_dp">

        <TextView
            android:id="@+id/buddhist_active_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="佛事活动"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buddhist_active_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px10_dp"
            android:background="@mipmap/ic_launcher_round" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buddhist_knowledge"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px90_dp">

        <TextView
            android:id="@+id/buddhist_knowledge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="佛教知识"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buddhist_knowledge_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px10_dp"
            android:background="@mipmap/ic_launcher_round" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buddhist_online"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px90_dp">

        <TextView
            android:id="@+id/buddhist_online_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="在线礼佛"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buddhist_online_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px10_dp"
            android:background="@mipmap/ic_launcher_round" />

    </RelativeLayout>
</LinearLayout>
