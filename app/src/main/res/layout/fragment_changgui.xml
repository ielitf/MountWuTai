<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/bao_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="请输入姓名"
        android:background="@drawable/edit_style"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <EditText
        android:id="@+id/bao_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:inputType="phone"
        android:padding="10dp"
        android:hint="请输入手机号"
        android:background="@drawable/edit_style"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <EditText
        android:id="@+id/bao_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        android:hint="请输入维修详细地址"
        android:background="@drawable/edit_style"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <Spinner
        android:id="@+id/bao_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        android:background="@drawable/edit_style"
        android:textColor="@color/black"
        android:textSize="@dimen/space_14" />

    <EditText
        android:id="@+id/bao_appearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:minHeight="25dp"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        android:minLines="1" 
        android:hint="请填写故障现象"
        android:background="@drawable/edit_style"
        android:gravity="top"
        android:textSize="@dimen/space_14"/>

    <Button
        android:id="@+id/bao_sub"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:background="@drawable/repair_button_style"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/space_16" />

</LinearLayout>