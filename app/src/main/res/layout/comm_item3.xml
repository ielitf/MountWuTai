<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/buddist"
    android:orientation="vertical"
    android:padding="@dimen/space_10">

    <ImageView
        android:id="@+id/comm_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/default_pic" />

    <TextView
        android:id="@+id/comm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comm_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="五爷生日|我为五爷披龙袍"
        android:layout_marginTop="@dimen/px10_dp"
        android:textColor="@color/title_gray"
        android:textSize="@dimen/px45_sp" />
    <TextView
        android:id="@+id/start_or_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/button_back2"
        android:text="即将开始"
        android:textColor="@color/white"
        android:padding="@dimen/px10_dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/px20_dp"
        android:layout_marginRight="@dimen/px20_dp"
        />

</RelativeLayout>