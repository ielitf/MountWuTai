<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/common_web_imag"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/space_8"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/common_web_tvContent_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="走进塔院寺"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="@dimen/space_20"
                android:layout_marginTop="@dimen/space_8"/>

            <TextView
                android:id="@+id/common_web_tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"/>
            <ImageView
                android:id="@+id/common_web_imag2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/common_web_tvContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_8"/>
            <ImageView
                android:id="@+id/common_web_imag3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/common_web_tvContent3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_8"/>
            <ImageView
                android:id="@+id/common_web_imag4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/common_web_tvContent4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_8"/>
            <ImageView
                android:id="@+id/common_web_imag5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/common_web_tvContent5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_8"/>
            <ImageView
                android:id="@+id/common_web_imag6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/common_web_tvContent6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_8"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>